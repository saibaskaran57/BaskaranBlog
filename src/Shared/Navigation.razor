<div class="navbar navbar-expand-lg navbar-light">
    <a class="logo" href="">Baskaran</a>
    <button @onclick="ToggleNavMenu" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="@NavMenuCssClass navbar-collapse justify-content-end" id="navbarNav" @onclick="ToggleNavMenu">
        <ul class="navbar-nav">
            <li class="nav-item">
                <NavLink class="nav-link" href="/posts" Match="NavLinkMatch.All">
                    <i class="fas fa-blog"></i> Posts
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="#2" Match="NavLinkMatch.All">
                    <i class="far fa-address-card"></i> About
                </NavLink>
            </li>
        </ul>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
